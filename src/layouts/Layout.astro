---
export interface Props {
  title: string;
}

import Side from "../components/Side.astro";
import Tools from "../components/Tools.svelte";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-gray text-grey dark:text-white font-sans">
    <div
      class="fixed w-screen h-screen inset-0 bg-[url('/images/code-bg.png')] bg-cover bg-fixed"
    >
    </div>
    <div class="page-wrapper relative">
      <div class="flex relative gap-20">
        <Side />
        <Tools client:load />
        <slot name="hero" />
      </div>

      <slot />
    </div>
  </body>
</html>

<script is:inline>
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    // if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
    //   return "dark";
    // }
    return "dark";
  })();
  if (theme === "light") {
    document.documentElement.classList.remove("dark");
  } else {
    document.documentElement.classList.add("dark");
  }
  window.localStorage.setItem("theme", theme);
</script>

